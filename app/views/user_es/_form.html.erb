      <h4><%= pluralize(user_e.errors.count, "error") %> prohibited this user_e from being saved:</h4>

      <ul>
        <% user_e.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class= "container">
  <form>

  <div class="form-group row"> #Select de tipo de persona
    <%= form.label :tipo_persona, style: "display: block", class:'col-sm-2' %>
