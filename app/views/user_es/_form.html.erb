  </div>

  <div class="form-group col">
    <%= form.label :fecha_inicial, style: "display: block", class:'col-sm-4' %>
    <%= form.datetime_field :fecha_inicial %>
  </div>

  <div class="form-group col">
    <%= form.label :fecha_vencimiento, style: "display: block", class:'col-sm-4' %>
    <%= form.datetime_field :fecha_vencimiento %>
  </div>

  <div class="form-group col">
    <%= form.label :nombre, style: "display: block", class:'col-sm-4' %>
    <%= form.text_field :nombre %>
  </div>

  <div class="form-group col">
    <%= form.label :correo_electronico, style: "display: block", class:'col-sm-4'%>
    <%= form.text_field :correo_electronico %>
  </div>

  <div class="form-group col">
    <%= form.label :telefono_principal, style: "display: block", class:'col-sm-4' %>
    <%= form.number_field :telefono_principal %>
  </div>

  <div class="form-group col">
    <%= form.label :telefono_secundario, style: "display: block", class:'col-sm-4' %>
